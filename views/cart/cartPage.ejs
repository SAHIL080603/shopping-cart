<% layout('layout/boilerplate') -%>

<section class="container">
  <h1 class="display-6">My Cart</h1>
    <div class="row">
        <div class="col-lg-8">
            <% for(let product of cart){%>
                <div class="card mx-auto mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-4">
                        <img src="<%=product.img%>" class="img-fluid rounded-start" style="height: 135px" alt="...">
                      </div>
                      <div class="col-8">
                        <div class="card-body">
                          <h5 class="card-title"><%=product.name%></h5>
                          <p class="card-text">Price : Rs.<%=product.price%>(each unit)</p>
                          <p style="display: inline;">Quantity :</p>
                          <form action="/products/<%= product.id %>/cart" style="display: inline;" method="get"><button name="add" value="-1" style="width: 30px; margin-right: 5px;">-</button></form> 
                            <%=product.count%> 
                          <form action="/products/<%= product.id %>/cart" style="display: inline;" method="get"><button name="add" value="1" style="width: 30px;  margin-left: 5px;">+</button></form>
                          <form action="/products/<%= product.id %>/cart?_method=DELETE" method="post" style="display: inline; margin-left: 80px;">
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                          </form>
                        </div>
                        
                      </div>
                    </div>
                  </div>
            <%} %> 
        </div>
        <div class="col-lg-4">
            <ul class="list-group">
                <% for(const product of cart){ %> 
                    <li class="list-group-item"><span class="fw-bold"><%= product.name %> - </span>&#8377; <%= product.price %>  x  <span><%=product.count%> </span></li>
                <% } %> 
                <li class="list-group-item fw-bold">Total Amount : &#8377; <%=totalAmount%> </li>
            </ul>
            <button class="btn btn-success btn-sm mt-3">Checkout</button>
        </div>
    </div>

   
</section>